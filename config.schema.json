{
    "pluginAlias": "HomeMatic",
    "pluginType": "platform",
    "dynamicSchemaVersion": 1,
    "singular": true,
    "headerDisplay": "Homebridge plugin for the Homematic CCUs",
    "footerDisplay": "For the complete configuration for this plugin please [click](http://{myHost}:{myPort}/)",
    "schema": {
        "type": "object",
        "properties": {
            "name": {
                "title": "Name",
                "type": "string",
                "default": "HomeMatic CCU",
                "required": true
            },
            "ccu_ip": {
                "title": "CCU IP",
                "type": "string",
                "description": "The IP address of your CCU",
                "required": true
            },
            "subsection": {
                "title": "Subsection",
                "type": "string",
                "default": "Homekit",
                "required": true,
                "description": "All devices with this subsection will be polled from your ccu"
            },
            "ios10": {
                "title": "HomeKit > IOS10",
                "type": "boolean",
                "default": true
            }
        }
    }
}